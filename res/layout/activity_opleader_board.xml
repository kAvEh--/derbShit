<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/ir.eynakgroup.derbi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.eynakgroup.derbi.onep.OPLeaderBoardActivity" >

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/onep_leader_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#FFF"
        app:pstsDividerColor="#FFF"
        app:pstsIndicatorColor="#FFF"
        app:pstsIndicatorHeight="0dp"
        app:pstsShouldExpand="true"
        app:pstsUnderlineHeight="0dp" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/onep_leader_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onep_leader_tabs"
        android:background="#ABF" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>